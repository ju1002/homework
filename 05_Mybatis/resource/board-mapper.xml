<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boardMapper">
<sql id = "boardColumn">



SELECT
				BOARD_NO boardNo
				, BOARD_TITLE boardTitle
				, USERID boardWriter
				, CREATE_DATE createDate
		FROM
				BOARD
		JOIN
				MEMBER ON (USERNO = BOARD_WRITER)
				
		WHERE
		        DELETE_YN ='N'







</sql>

	<select id="selectBoardList" resultType="board">
		<include refid = "boardColumn"/>
		ORDER
		BY
		BOARD_NO DESC
	</select>


	<select id="selectBoard" parameterType="_int" resultType="board">
	
	<include  refid = "boardColumn"/>
		
		AND
		        BOARD_NO = #{boardNo}


	</select>
	
	
	<insert id = "insertBoard"
			parameterType ="com.kh.statement.moodel.vo.Board">
			
			
			INSERT
			  INTO
			       BOARD
			 VALUES
			       (BOARD_NO boardNo
			         #{boardTitle}
			      ,  #{boardContent}
			      ,  # boardWriter
			       , CREATEDATE
			       , DELETE_STATUS deleteStatus 
			       	       
			    
			       )
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	</insert>




</mapper>